<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_map_thumbnail"
        android:layout_margin="@dimen/photo_result_form_margin"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:context="biopprimrose.d123.d5p.shuger.of.lamp.biopprim.FormActivity">
        <TextView
            android:id="@+id/fragment_form_title"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/fragment_form_image"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher"/>

    </LinearLayout>

</ScrollView>

